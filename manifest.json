{
  "manifest_version": 3,
  "name": "Gemini Side Panel",
  "version": "1.0.0",
  "description": "Open Google Gemini in a side panel with one click",
  "permissions": [
    "sidePanel",
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "https://gemini.google.com/*",
    "https://*.google.com/*",
    "https://*.googleusercontent.com/*",
    "https://*.gstatic.com/*"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "action": {
    "default_title": "Open Gemini"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.svg",
    "48": "icon48.svg",
    "128": "icon128.svg"
  }
}
